{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["ES2023"],
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
