{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "addon": ["./build/Release/addon"]
    },
    "moduleResolution": "node"
  },
  "include": ["index.ts", "src/**/*.ts", "*.d.ts", "examples/**/*.ts", "test/**/*.ts"],
}
